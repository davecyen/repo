extends layout

block styles
  link(rel='stylesheet', href='/styles/index.css')

block scripts


block content
  .jumbotron.masthead.row 
    .span6
      h1.heading Find Software Smarter, Together
      h2.subheading Find the right open source library for your next project

    form.signup.well.span4(action='/users', method='post')
      if message != ''
        p.alert.alert-error #{message}

      input(type="text", name='user[username]', placeholder="Pick a username")
      input(type="text", name='user[email]', placeholder="Your email")
      input(type="password", name='user[password]', placeholder="Choose a password")
      button.btn.btn-large.btn-primary(type="submit") Sign up   

    



