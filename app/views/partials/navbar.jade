.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      button.btn.btn-navbar(type="button",data-toggle="collapse", data-target=".nav-collapse")
        span.icon-bar
        span.icon-bar
        span.icon-bar
      
      a.brand(href="/") R
      .nav-collapse.collapse
        ul.nav
          li 
            form.navbar-form.pull-right(action='/search', method='get')
              input.span2.search-query(type="text", name='query', placeholder="Search")

          li 
            a(href="/module") Add a Module

        
        if !user 
          form.navbar-form.pull-right(action='/user/login', method='post')
            input.span2(type="text", name='username', placeholder="Username")
            input.span2(type="password", name='password', placeholder="Password")
            button.btn(type="submit") Sign in
        else
          .user 
            a.pull-right.logout(href='/user/logout') (logout)
            a.username.pull-right(href='/account') #{user.username}
